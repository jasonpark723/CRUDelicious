@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>

<div class="container">
    <h1 class="display-4 text-center">Welcome to CRUDelicous</h1>
    <div class="row">
        <div class="col-10">
            <h5>Check out some recent dishes!</h5>
            <hr>
            @foreach (Dish dish in Model)
            {
                <h4><a href="@dish.DishId">@dish.Name</a> by @dish.Chef</h4>
            }
        </div>
        <div class="col-2"><a href="/new">Add a Dish</a></div>
    </div>
</div>

