@model Dish
<div class="container">
    <h1 class="text-center">Edit @Model.Name</h1>
    <a href="/">Home</a>
    <form action="/Update/@Model.DishId" method="post">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Name">Name of Dish</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input class="form-control" asp-for="Name" value="@Model.Name">
                </div>

                <div class="form-group">
                    <label asp-for="Chef">Chef's Name</label>
                    <span asp-validation-for="Chef" class="text-danger"></span>
                    <input class="form-control" asp-for="Chef" value="@Model.Chef">
                </div>

                <div class="form-group">
                    <label asp-for="Calories"># of Calories</label>
                    <span asp-validation-for="Calories" class="text-danger"></span>
                    <input class="form-control" asp-for="Calories" value="@Model.Calories">
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Tastiness"></label>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                    <select class="form-control" asp-for="Tastiness" value="@Model.Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea class="form-control" asp-for="Description">@Model.Description</textarea>
                </div>
                <button type="submit" class="btn btn-danger">Add Dish</button>
            </div>
        </div>
    </form>
</div>